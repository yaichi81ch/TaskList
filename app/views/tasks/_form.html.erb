<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-line row col-xs-8">
    
          <div class="form-group" >
            <%= f.label :content, 'Task' %>
            <%= f.text_field :content, class: 'form-control' %>
          </div>
        
          <div class="form-group" >
            <%= f.label :duedate, 'Due' %>
            <%= f.date_field :duedate, class: 'form-control' %>
          </div>
        
          <div class="form-group" >
            <%= f.label :status, 'Status' %>
            <%= f.text_field :status, :value => "未着手", class: 'form-control' %>
          </div> 
      
      <%= f.submit '追加', class: "btn btn-primary" %></tr>
     
  </div>    
<% end %>