<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>id</th>
      <th>Task</th>
      <th>Due</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.content %></td>
      <td><%= task.duedate %></td>
      <td><%= task.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>

